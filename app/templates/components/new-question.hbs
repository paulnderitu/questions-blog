{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
<form>
  <div class="form-group">
    <label for="title">Title/Question:</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="content">Content:</label>
    {{input value=content id="content"}}
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="image">Image of Choice:</label>
    {{input value=image id="image"}}
  </div>
  <div class="form-group">
    <label for="date">Date Published:</label>
    {{input value=date id="date"}}
  </div>
  <button {{action 'saveQuestion1'}}>Save Question</button>
</form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
